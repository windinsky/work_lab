<form action="/articles/create" method="post" accept-charset="utf-8">
	<div><label for="title">Title</label><input type="text" name="title" value=""></div>
	<div><select name="category_id" id="category_id">
		<% @categories.each do |c| %>
		<option value="<%= c.id %>"><%= c.value %></option>
		<% end %>
	</select></div>
	<div><textarea name="content"></textarea></div>
	<div><input type="submit" name="submit" value="提交" id="submit"></div>
</form>